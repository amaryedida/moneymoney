<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.money.moneymoney">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyMoney"
        tools:targetApi="31">
        
        <activity
            android:name=".DashboardActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MoneyMoney">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ExpenseEntryActivity"
            android:exported="false"
            android:label="Add Expense"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/Theme.MoneyMoney">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity" />
        </activity>

        <activity
            android:name=".GoalEntryActivity"
            android:exported="false"
            android:label="Add Goal"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/Theme.MoneyMoney">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity" />
        </activity>

        <activity
            android:name=".CurrencyReportsActivity"
            android:exported="false"
            android:label="Reports"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/Theme.MoneyMoney">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity" />
        </activity>

        <activity
            android:name=".IncomeEntryActivity"
            android:exported="false"
            android:label="Add Income"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/Theme.MoneyMoney">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity" />
        </activity>

        <activity
            android:name=".InvestmentEntryActivity"
            android:exported="false"
            android:label="Add Investment"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/Theme.MoneyMoney">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity" />
        </activity>

    </application>

</manifest>